<Window x:Class="POS_Mrtech.Pages.AdminDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POS_Mrtech.Pages"
        xmlns:UserControls="clr-namespace:POS_Mrtech.View.UserControls"
        mc:Ignorable="d"
        Title="Mrtech POS - Home"
        Height="720"
        Width="1280"
        WindowStartupLocation="CenterScreen"
        Icon="/Mr.Tech Logo.png"
        Background="#FF212529">

    <Grid x:Name="Page">
        <Border 
            Background="#212529"/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition  Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" Background="#2A2A2A">
                <Grid.RowDefinitions>
                    <RowDefinition Height="8*"/>
                    <RowDefinition Height="92*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="80*"/>
                    </Grid.ColumnDefinitions>
                    <Image 
                        Name="Logo" 
                        Grid.Column="0" 
                        Stretch="Uniform"
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Center" 
                        Source="/Mr.Tech Logo.png" 
                        Width="auto" Height="auto" 
                        Margin="10,5,5,5"/>
                    <TextBlock 
                        Name="Name_main" 
                        Grid.Column="1" 
                        Text="P O S" 
                        FontSize="35" FontWeight="Bold" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="center" 
                        Height="auto" Width="auto" 
                        FontFamily="Roboto" 
                        Foreground="Beige"/>
                    <TextBlock 
                        Name="SubText" 
                        Grid.Column="1" 
                        Text="point of sales system" 
                        FontSize="10" FontWeight="SemiBold" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Bottom"
                        Margin="0,0,0,5"
                        Height="auto" Width="auto" 
                        FontFamily="Roboto" 
                        Foreground="Beige"/>
                </Grid>
                <Grid Grid.Row="1" Margin="0,50,0,0" Background="Transparent">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="80"/>
                        <RowDefinition Height="80"/>
                        <RowDefinition Height="80"/>
                        <RowDefinition Height="80"/>
                        <RowDefinition Height="80"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Button Name="DashboardBtn"
                            Click="gotoDashBoard"
                            Height="80"
                            Background="#2A2A2A"
                            FontSize="15" 
                            Foreground="White"
                            FontWeight="Bold" 
                            BorderThickness="0"
                            Cursor="Hand"
                            HorizontalContentAlignment="Left"
                            VerticalAlignment="Center"
                            Width="250">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Path Fill="DeepSkyBlue" VerticalAlignment="Center" Margin="10,0,0,0" Data="M13,3V9H21V3M13,21H21V11H13M3,21H11V15H3M3,13H11V3H3V13Z" />
                            <TextBlock Text="Dashboard" VerticalAlignment="Center" Foreground="#ffff" Margin="20,0,0,0"/>
                        </StackPanel>
                    </Button>
                    <Button Name="InventoryBtn"
                            Click="gotoInventory"  
                            Grid.Row="1" 
                            Height="80"
                            Background="#2A2A2A"
                            FontSize="15" 
                            Foreground="White"
                            FontWeight="Bold" 
                            BorderThickness="0"
                            Cursor="Hand"
                            HorizontalContentAlignment="Left"
                            VerticalAlignment="Center"
                            Width="250">
