                    </StackPanel>
                </Grid>
            </Grid>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="4*"/>
                    <RowDefinition Height="96*"/>
                </Grid.RowDefinitions>
                <UserControls:MainMenu Grid.Row="0" VerticalContentAlignment="Center"/>
                <Frame Grid.Row="1" x:Name="Content_Main"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
