<UserControl x:Class="POS_Mrtech.View.UserControls.TextBoxComp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:POS_Mrtech.View.UserControls"
             Height="50">
    <Grid Background="White">
        <TextBox x:Name="textBox"
                 VerticalContentAlignment="Center"
                 Padding="10,2"
                 Background="Transparent"
                 BorderBrush="Transparent"
                 BorderThickness="0"
                 Foreground="Black"
                 FontSize="16"
                 FontWeight="Light"
                 TextChanged="TextBox_TextChanged"
                 />
        
        <TextBlock Name="placeholderText"
                   Text="{Binding Placeholder, UpdateSourceTrigger=PropertyChanged}"
                   FontSize="16"
                   Foreground="DarkGray"
                   Margin="10,2"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Panel.ZIndex="1"/>

    </Grid>
</UserControl>

